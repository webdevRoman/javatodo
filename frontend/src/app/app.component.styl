@import '../assets/vars'

.container
  display: flex
  justify-content: center
  align-items: center
  flex-direction: column
  width: 100%
  height: 100%
  padding: 50px
.title
  font-size: $fzTitle
  color: $cBgDark
  margin-bottom: 30px
.form
  display: flex
  justify-content: space-between
  align-items: center
  width: 100%
  &__input
    flex-grow: 1
  &__button
    margin-top: -1.3em
    margin-left: 20px
.controls
  display: flex
  justify-content: space-between
  align-items: center
  width: 100%
  margin-bottom: 15px
  &_left
    flex-basis: 250px
    display: flex
    justify-content: space-between
    align-items: center
  &__info
    margin-left: 10px
.tasks
  width: 100%
  &__no
    font-size: 20px